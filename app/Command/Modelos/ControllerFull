<?php

namespace App\Controller;

class ExampleController
{
  /**
   * Método responsável por listar
   * @param Array $fields
   * @param Request $request
   * @return Array
   */
  public static function index($fields, $request)
  {
    if(!check_request($fields, $request)){
      return false;
    }
  }
  
  /**
   * Método responsável por abrir o Cadastro
   * @param Array $fields
   * @param Request $request
   * @return Array
   */
  public static function create($fields, $request)
  {
    if(!check_request($fields, $request)){
      return false;
    }
  }
  
  /**
   * Método responsável por Cadastrar
   * @param Array $fields
   * @param Request $request
   * @return Array
   */
  public static function store($fields, $request)
  {
    if(!check_request($fields, $request)){
      return false;
    }
  }
  
  /**
   * Método responsável por Mostrar um unico
   * @param Array $fields
   * @param Request $request
   * @return Array
   */
  public static function show($fields, $request)
  {
    if(!check_request($fields, $request)){
      return false;
    }
  }
  
  /**
   * Método responsável por abrir a Edição
   * @param Array $fields
