   * @param Request $request
   * @return Array
   */
  public static function update($fields, $request)
  {
    if(!check_request($fields, $request)){
      return false;
    }
  }
  
  /**
   * Método responsável por Deletar
   * @param fields Request Method e Path
   * @param request Request Object
   * @return HttpCode
   */
  public static function destroy($fields, $request)
  {
    if(!check_request($fields, $request)){
      return false;
    }
